<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:rb="http://schemas.android.com/apk/res-auto"
    android:background="@color/trans"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_marginTop="8dp"

        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="3dp"


        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/viewAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="10dp">

            <CheckBox
                android:id="@+id/cbCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/checkbox_green"
                android:visibility="gone"
                android:text=""/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.yongtrim.lib.ui.CircularNetworkImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="9dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/picture_big_icon"
                    />

                <ImageView
                    android:id="@+id/ivMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nuums_mark"
                    android:visibility="visible"
                    />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/viewAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/green"
                android:textSize="8dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/tvUsername"

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"

                android:text="넌"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_marginTop="20dp"

            android:layout_toRightOf="@+id/viewAvatar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:textColor="@color/gray"
            android:textSize="13dp"

            android:text="저요!"/>


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/tvDate"

            android:layout_alignParentRight="true"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:textColor="@color/gray_50"
            android:textSize="11dp"

            android:text="45분전"/>


        <ImageView
            android:id="@+id/ivModify"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_3dot"/>




    </RelativeLayout>

    <View
        android:id="@+id/viewLine"
        android:background="@color/gray"
        android:layout_height="1px" android:layout_width="match_parent"/>

</LinearLayout>