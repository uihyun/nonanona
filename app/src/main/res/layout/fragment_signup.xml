<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ultra="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_green" />

            <LinearLayout
                android:id="@+id/list_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <com.yongtrim.lib.ui.UltraButton
                    android:id="@+id/btnSigninEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="onButtonClicked"
                    android:padding="8dp"
                    ultra:borderColor="@color/white"
                    ultra:borderWidth="1px"
                    ultra:defaultColor="@color/green"
                    ultra:focusColor="@color/buttonsel_bg"
                    ultra:radius="10dp"
                    ultra:style="center"
                    ultra:text="Email로 회원가입"
                    ultra:textColor="@color/white"
                    ultra:textSize="20dp" />

                <com.yongtrim.lib.ui.UltraButton
                    android:id="@+id/btnSignupFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="onButtonClicked"
                    android:padding="8dp"
                    ultra:borderColor="@color/white"
                    ultra:borderWidth="1px"
                    ultra:defaultColor="@color/com_facebook_blue"
                    ultra:focusColor="@color/buttonsel_bg"
                    ultra:radius="10dp"
                    ultra:style="center"
                    ultra:text="Facebook으로 회원가입"
                    ultra:textColor="@color/white"
                    ultra:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <com.yongtrim.lib.ui.UltraEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bgStyle="white"
                    app:hint="이메일" />


                <com.yongtrim.lib.ui.UltraEditText
                    android:id="@+id/etRealName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bgStyle="white"
                    app:hint="이름(실명)" />

                <com.yongtrim.lib.ui.UltraEditText
                    android:id="@+id/etNickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bgStyle="white"
                    app:hint="닉네임(2자이상)" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.yongtrim.lib.ui.UltraEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        app:bgStyle="white"
                        app:hint="비밀번호" />

                    <com.yongtrim.lib.ui.UltraEditText
                        android:id="@+id/etConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        app:bgStyle="white"
                        app:hint="비밀번호 확인" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="확인 버튼을 누르면 개인정보 수집 및 이용에 동의하게 됩니다."
                    android:textColor="@color/red"
                    android:textSize="10dp" />

                <com.yongtrim.lib.ui.UltraButton
                    android:id="@+id/btnSignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="onButtonClicked"
                    android:padding="8dp"
                    ultra:borderColor="@color/white"
                    ultra:borderWidth="1px"
                    ultra:defaultColor="@color/green"
                    ultra:focusColor="@color/buttonsel_bg"
                    ultra:radius="10dp"
                    ultra:style="center"
                    ultra:text="확인"
                    ultra:textColor="@color/white"
                    ultra:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>