<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ultra="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:id="@+id/padding0"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"/>

                <View
                    android:id="@+id/viewMarkLeft"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/red"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:id="@+id/padding1"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp">

                <com.yongtrim.lib.ui.UltraButton
                    android:id="@+id/btnBookmark"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    ultra:style="center"
                    ultra:defaultColor="@color/trans"
                    ultra:focusColor="@color/buttonsel_bg"
                    ultra:iconPosition="left"
                    ultra:iconResource="@drawable/big_like_off"

                     />

                <com.yongtrim.lib.ui.CircularNetworkImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/picture_big_icon"
                    android:layout_marginLeft="5dp"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/tvTitle"
                        android:layout_toLeftOf="@+id/tvDate"
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />


                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tvDate"
                        android:layout_marginTop="5dp"
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:textColor="@color/gray_50" />


                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvNickname"
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/green" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/viewAddress"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/tvAddress"
                            android:text="서울특별시 중구"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/gray" />

                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/map"/>

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/viewViewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/trans"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAmountMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/green"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/tvDiscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="-"
                    android:padding="5dp"
                    />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/viewList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/trans"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.yongtrim.lib.ui.CustomNetworkImageView
                        android:id="@+id/ivThumb0"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="2dp"
                        android:background="@color/gray"
                        />

                    <com.yongtrim.lib.ui.CustomNetworkImageView
                        android:id="@+id/ivThumb1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"

                        android:background="@color/gray"
                        />

                    <com.yongtrim.lib.ui.CustomNetworkImageView
                        android:id="@+id/ivThumb2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="2dp"
                        android:background="@color/gray"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/viewFinish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b4c0c2c3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:alpha="0.5"
                        android:src="@drawable/logo_white"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나눔 마감되었습니다."
                        android:textSize="15dp"
                        android:textColor="#50fefffb"/>

                </LinearLayout>

                <include
                    android:id="@+id/viewTimer"
                    android:layout_gravity="right|bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    layout="@layout/layer_timer"
                    />


            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:id="@+id/padding2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray"/>

                <View
                    android:id="@+id/viewMarkRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>

</LinearLayout>