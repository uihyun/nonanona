<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:rb="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        >

        <com.yongtrim.lib.ui.CircularNetworkImageView
            android:id="@+id/ivAvatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:background="@drawable/hoogisajin"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="top"
            >
            <TextView
                android:layout_weight="1"
                android:id="@+id/tvMessage"
                android:text="조리조리fdsfadsfdaslfad dfasdlf j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:minHeight="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDate"
                android:text="2분전"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="11dp"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:background="@color/white"
        android:layout_height="1px" android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>